<div id="review-add">
    <form action="{{ path('review_add', {'id': product.id}) }}" method="post">
        <div class="form-group">
            <div class="row">
                <div class="col-md-12">
                    {{ form_label(form.rating, "Rating") }}
                    {{ form_widget(form.rating) }}
                    {{ form_errors(form.rating) }}
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    {{ form_label(form.content, "Review") }}
                    {{ form_widget(form.content, { 'attr' : { 'class' : 'form-control', 'placeholder' : 'Enter review...', 'rows' : '5' } }) }}
                    {{ form_errors(form.content) }}
                </div>
            </div>	
        </div>

        <div class="row">
            <div class="col-md-12">
                <button class="btn btn-success" type="submit">
                    Send
                    <span class="glyphicon glyphicon-send"></span>
                </button>
            </div>
        </div>

        {{ form_rest(form) }}
    </form>
</div>
