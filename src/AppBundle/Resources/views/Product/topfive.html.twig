{% extends "::dashboard.html.twig" %}

{% block dashboard_title %}{{ parent() }}Top 5 Products{% endblock dashboard_title %}

{% block body %}
    <div class="row">
        <div class="col-md-12">
            {{ include("UserBundle:User:toolbar.html.twig") }}
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <h1 class="title title-1">Top 5 Products</h1>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            {% if products is empty %}
                <p>Still no ratings have been left.</p>

            {% else %}
                <table class="table table-striped">
                    <tr>
                        <th>Product ID</th>
                        <th>Rating</th>
                    </tr>
                    {% for product in  products %}
                        <tr>
                            <td><a href="{{ path("product_view", { "id" : product.product_id }) }}">{{ product.product_id }}</a></td>
                            <td>{{ product.rate }}</td>
                        </tr>
                    {% endfor %}
                </table>
            {% endif %}
        </div>
    </div>
{% endblock body %}
