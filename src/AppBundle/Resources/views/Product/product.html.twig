{% extends "::dashboard.html.twig" %}

{% block dashboard_title %}{{ parent() }} {% endblock dashboard_title %}

{% block body %}
	<div class="row">
		<div class="col-md-12">
			{{ include("AppBundle:Product:toolbar.html.twig") }}
		</div>
	</div>

    <div class="row">
        <div class="col-md-12">
            <h1 class="title title-1">Products list</h1>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            {% if products is empty %}
                <p>Aucun product enregistré en base.</p>

            {% else %}
                <table class="table table-striped">
                    <tr>
                        <th>N°</th>
                        <th>ID</th>
                        <th>Title</th>
                        <th>Author</th>
                        <th>Date</th>
                    </tr>
                    {% for product in  products %}
                        <tr>
                            <td>{{ loop.index }}</td>
                            <td>{{ product.id }}</td>
                            <td>
                                <a href="{{ path("product_view", { "id" : product.id }) }}">{{ product.title }}</a>
                            </td>
                            <td>{{ product.author }}</td>
                            <td>{{ product.date|date("d/m/Y") }}</td>
                        </tr>
                    {% endfor %}
                </table>
            {% endif %}
        </div>
    </div>
{% endblock body %}
